{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}{{ 'app.register-competitor.title' | trans }} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>
                {{ 'app.register-competitor.title' | trans }}
                <small>
                    {{ 'app.global.title' | trans }}
                </small>
            </h1>
        </div>

        <p class="lead text-justify">
            {{ 'app.register-competitor.texts.info.1' | trans | raw }}
            {{ 'app.register-competitor.texts.info.2' | trans | raw }}
        </p>

        <p class="lead text-justify">
            {{ 'app.register-competitor.texts.info.3' | trans | raw }}
            {{ 'app.register-competitor.texts.info.4' | trans | raw }}
            {{ 'app.register-competitor.texts.info.5' | trans | raw }}
        </p>

        <p class="lead text-justify">
            {{ 'app.register-competitor.texts.info.6' | trans | raw }}
            {{ 'app.register-competitor.texts.info.7' | trans | raw }}
        </p>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}
